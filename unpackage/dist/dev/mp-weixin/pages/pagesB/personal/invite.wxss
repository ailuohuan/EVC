.content {
  font-size: 30rpx;
  color: #333;
  text-align: center;
  background-color: #F7F7F7;
  height: 1334rpx;
}
.content .copy-img {
    width: 30rpx;
    height: 30rpx;
}
.content .btn {
    background: -webkit-gradient(linear, left top, left bottom, from(#7FCCFF), color-stop(#6AB6F6), to(#0099FF));
    background: -o-linear-gradient(#7FCCFF, #6AB6F6, #0099FF);
    background: linear-gradient(#7FCCFF, #6AB6F6, #0099FF);
    border-radius: 50%;
    width: 280rpx;
    height: 90rpx;
}
.content .box {
    width: 700rpx;
    height: 900rpx;
    margin: 32rpx 26rpx 48rpx 26rpx;
    text-align: center;
}
.content .box .logo-img {
      width: 120rpx;
      height: 120rpx;
      margin-top: 38rpx;
}
.content .box .name {
      font-size: 36rpx;
      font-weight: bold;
      margin-top: 48rpx;
}
.content .box .transfer-accounts {
      font-size: 26rpx;
      color: #999;
      margin-top: 34rpx;
}
.content .box .code-num {
      font-size: 40rpx;
      color: #333;
      font-weight: bold;
      margin-top: 42rpx;
}
.content .box .qrcode-img {
      height: 220rpx;
      width: 220rpx;
      margin: 88rpx 0 22rpx;
}
.content .box .qr-tip {
      font-size: 20rpx;
      background-color: #E5F5FF;
      height: 44rpx;
      line-height: 44rpx;
      text-align: center;
      width: 220rpx;
      border-radius: 22rpx;
      margin: 0 auto 40rpx;
}
.content .box .adress-box {
      margin-left: 140rpx;
}
