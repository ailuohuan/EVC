
page{background-color: #FFFFFF;}
.wrap{padding: 0 24rpx;}
.assets-wrap{background:-webkit-gradient(linear,left top, left bottom,from(rgba(0,153,255,1)),to(rgba(0,135,225,1)));background:-o-linear-gradient(top,rgba(0,153,255,1) 0%,rgba(0,135,225,1) 100%);background:linear-gradient(180deg,rgba(0,153,255,1) 0%,rgba(0,135,225,1) 100%);border-radius: 20rpx;color: #FFFFFF;padding: 24rpx;position: relative;}
.assets-wrap .dott,.wallet-list .dott{position: absolute;right: 20rpx;z-index: 20;}
.assets-wrap .icon-more,.wallet-list .icon-more{font-size: 50rpx;}
.assets-wrap .money{font-size: 56rpx;font-weight: bold;margin-right: 12rpx;}
.assets-wrap .wallet-address{opacity: 0.7;margin: 20rpx 0 40rpx;}
.assets-wrap .wallet-address .icon-erweima{font-size: 28rpx;margin-left: 12rpx;position: relative;top: 2rpx;}
.coin-wrap .title{font-weight: bold;padding: 24rpx 0;}
.coin-list .coin-item{border-bottom: 1px solid #FAFAFA;padding: 26rpx 0;}
.coin-list .coin-item image{width: 56rpx;height: 56rpx;}
.coin-list .coin-item .name{font-weight: bold;margin-left: 18rpx;}
.wallet-manage{padding: 24rpx;}
.wallet-title{font-size: 36rpx;position: relative;}
.wallet-title .iconfont{position: absolute;right: 24rpx;top: 10rpx;}
.wallet-list{margin-top: 20rpx;}
.wallet-list .item{background:-webkit-gradient(linear,left top, left bottom,from(rgba(0,153,255,1)),to(rgba(0,135,225,1)));background:-o-linear-gradient(top,rgba(0,153,255,1) 0%,rgba(0,135,225,1) 100%);background:linear-gradient(180deg,rgba(0,153,255,1) 0%,rgba(0,135,225,1) 100%);border-radius: 12rpx;margin-bottom: 20rpx;color: #FFFFFF;padding: 30rpx 20rpx;position: relative;}
.wallet-list .dott{top: 14rpx;}
.wallet-list .address{opacity: 0.7;}
.wallet-pop{text-align: center;padding: 40rpx 100rpx;}
.wallet-pop .name{font-weight: bold;font-size: 32rpx;margin-bottom: 12rpx;}
.wallet-pop .ercode{margin-top: 20rpx;}
.wallet-pop .ercode image{width: 200rpx;height: 200rpx;}
.wallet-pop .icon-fuzhi{font-size: 24rpx;margin-left: 8rpx;position: relative;top: 6rpx;}
.wallet-pop .address-wrap{margin-top: 40rpx;}

