
page{background-color: #FFFFFF;}
.block{border-top: 20rpx solid #F8F8F8;padding: 0 24rpx;}
.money-wrap{padding: 50rpx 0;line-height: 1.5;}
.money-wrap .money{font-weight: bold;font-size: 52rpx;}
.block>.flex-between{padding: 30rpx 0;}
.block>.flex-between .font-gray{width: 200rpx;}
.block .value{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;word-break: break-all;}
.bottom{border-top: 1px solid #F6F6F6;}
.bottom .left>view{padding: 20rpx 0;line-height: 1.7;}
.bottom .right image{width: 200rpx;height: 200rpx;}
.bottom .right button{width: 100%;height: 70rpx;line-height: 70rpx;font-size: 28rpx;margin-top: 12rpx;
}

